import { Badge } from "./ui/badge"
 const img = [
 {
        url: "./galletita.jpg",
        name: "Galletitas trituradas",
        texto: "Elaboradas con cacao real y sin conservantes, nuestras galletitas trituradas aportan una base crocante y sabrosa. Hechas en Argentina, son ideales para postres irresistibles."
},
{
        url: "./quesoCrema.jpg",
        name: "Queso crema",
        texto: "Cremoso, fresco y libre de gluten, este queso crema sin aditivos le da una textura suave y delicada a cada preparación. Perfecto para lograr ese sabor casero que nos caracteriza."
},
{
        url: "./ddl.jpg",
        name: "Dulce de leche",
        texto: "Nuestro dulce de leche repostero premium está hecho con leche entera y sin agregados artificiales. De origen nacional, garantiza un sabor intenso y auténtico en cada cucharada"
